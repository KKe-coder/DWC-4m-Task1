<h2>タイトル</h2>
<p><%= @list.title %></p>
<h2>本文</h2>
<p><%= @list.body %></p>
<p class="sentiment-score">本文の感情分析スコア [<%= @list.score %>]</p>
<h2>画像</h2>
<%= attachment_image_tag @list, :image, :fill, 300, 300, format: 'jpeg' %>
<div class="tag-box">
<% @list.tags.each do |tag| %>
  <span class="label" style="background-color:#<%= tag.name %>">ドミナントカラー：<%= tag.name %></span>
  <span class="label" style="background-color:<%= tag.color %>">最も近い色：<%= tag.color %></span>
<% end %>
</div>
<%= link_to "削除", destroy_todolist_path(@list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<%= link_to "編集", edit_todolist_path(@list.id) %>
